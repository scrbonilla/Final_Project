<h2 id="tbTitle" >All Deals</h2>
<table class="gradienttable">
  <thead>
    <tr>
      <th>Img</th>
      <th>Url</th>
      <th>Title</th>
      <th>Description</th>
      <th>Deal price</th>
      <th>Retail price</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @deals.each do |deal| %>
      <tr>
        <td>
          <img class="dealImg" src="<%= deal.img %>">
        </td>
        <td id="tbtxtwrap">
        <%=link_to deal.url, "http://#{deal.url}"%>
        </td>
        <td><%= deal.title %></td>
        <td id="tbtxtwrap"><%= deal.description %></td>
        <td><%= "$"+ "#{deal.deal_price}" %></td>
        <td><%= "$"+ "#{deal.retail_price}" %></td>
        <td><%= link_to 'Show', deal %></td>
        <td><%= link_to 'Edit', edit_deal_path(deal) %></td>
        <td><%= link_to 'Destroy', deal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Deal', new_deal_path %>
